<div class="container login-container">
  <div class="row">
    <div class="col-md-8 col-sm-12 sign-in-container">
      <%= form_for(resource, :html => {:class => "form-inline sign-in-form"}, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <!-- <label class="sr-only" for="email">Email address</label>
          <input type="email" class="form-control" id="email" placeholder="Email"> -->
          <%= f.label :email, :class => ('sr-only') -%>
          <%= f.email_field :email, :class => ('form-control'), :placeholder => ('Email'), autofocus: true %>
        </div>
        <div class="form-group">
          <!-- <label class="sr-only" for="password">Email address</label>
          <input type="password" class="form-control" id="password" placeholder="Password"> -->
          <%= f.label :password, :class => ('sr-only') -%>
          <%= f.password_field :password, :class => ('form-control'), :placeholder => ('Password'),   autocomplete: "off" %>
        </div>
        <!-- <button type="submit" class="btn btn-info">Sign in</button> -->
        <%= f.submit "Sign in", :class => ('btn btn-info') %>
        <a href="/users/sign_up" class="btn btn-info">Sign up</a>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="screenshot"></div>
  </div>
</div>
